        <form class="form create-event">
            <!-- event description -->
            <div class="form-group">
                <label for="event-description">Event Description:</label>
                <input class="form-input" type="text" id="event-description" required />
            </div>
            <!-- Location -->
            <div class="form-group">
                <label for="event-location">Location:</label>
                <input class="form-input" type="text" id="event-location" required />
            </div>
            <!-- State Select -->
            <div class="form-group">
                <label for="event-state">State:</label>
                <select class="form-input" type="text" id="event-state" required>
                    <option value="none" selected disabled hidden>Select an Option</option>
                    <option value="AL">AL</option>
                    <option value="AK">AK</option>
                    <option value="AR">AR</option>
                    <option value="AZ">AZ</option>
                    <option value="CA">CA</option>
